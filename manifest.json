{
    "manifest_version": 2,
    "name": "hostory gateway",
    "author": "gold holk",
    "version": "0.0",
    "description": "filter some history record and save to other place.",
    "homepage_url": "http://github.com/gholk/history-gateway/",
    "icons": {
        "48": "icon-48.png"
    },
    "permissions": ["history", "storage", "activeTab"],
    "background": {
        "scripts": ["background-script.js"]
    },
    "options_ui": {
        "browser_style": false,
        "page": "control-panel.html"
    }
}
